<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    
    <!-- create hamburger button with dropdown menu for other pages in the app -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <!-- if there is no username, show the login form -->
    <% if(!user) { %>  
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls/login">Login</a>
        <a class="nav-item nav-link" href="/urls/register">Register</a>
    </div>
    
    <!-- if there is a username, show the username and a logout button -->
    <% } else{ %>
      <a>Logged In As: <%= user.email %></a>
      <form class="form-inline" action="/logout" method="POST">
        <div class="form-group mb-2">
          <button type="logout" class="btn btn-outline-dark" style="margin: 1em">Logout</button>
        </div>
      </form>
    <% } %>
  
   

  </nav>
</header>